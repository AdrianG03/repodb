<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de juegos</h3>
        {{#if juego}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">idJuego</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Clasificación</th>
                        <th scope="col">Desarrollador</th>
                        <th scope="col">Año</th>
                        <th scope="col">Editor</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each juego}}
                        <tr>
                            <td>{{nombreJ}}</td>
                            <td>{{precio}}</td>
                            <td>{{class}}</td>
                            <td>{{dev}}</td>
                            <td>{{anio}}</td>
                            <td>{{editor}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">REGISTRO DE JUEGOS </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes agregar un juego</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas agregar</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>
